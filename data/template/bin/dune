(executable
 (public_name mygame)
 (name mygame_bin)
 (modules mygame_bin)
 (libraries mygame gamelle.sdl))

(executable
 (name mygame_js)
 (modules mygame_js)
 (modes js)
 (libraries mygame gamelle.jsoo))

(rule
 (target index.html)
 (deps index.html.template mygame_js.bc.js)
 (action
   (with-stdout-to index.html
     (run %{bin:gamelle} html --template=index.html.template --script=mygame_js.bc.js))))

