(executable
 (public_name pong)
 (name pong_bin)
 (modules pong_bin)
 (libraries pong gamelle.sdl))

(executable
 (name pong_js)
 (modules pong_js)
 (modes js)
 (libraries pong gamelle.jsoo))

(rule
 (target index.html)
 (deps index.html.template pong_js.bc.js)
 (action
  (with-stdout-to
   index.html
   (run
    %{bin:gamelle}
    html
    --template=index.html.template
    --script=pong_js.bc.js))))
